<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_login"
    android:layout_width="match_parent"
    android:layout_height="745dp"
    android:background="@drawable/main_container_main">
    <ImageView
        android:id="@+id/image_background_login"
        android:layout_width="413dp"
        android:layout_height="872dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-29dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_background_login" />

    <LinearLayout
        android:id="@+id/container_input"
        android:layout_width="298dp"
        android:layout_height="62dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="275dp"
        android:layout_gravity="top|left"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/text_input_username_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:fontFamily="@font/roboto_medium"
            android:singleLine="true"
            android:text="Username"
            android:textColor="#FF4A1515"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/container_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/image_book_box"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            tools:ignore="DuplicateIds">

            <EditText
                android:id="@+id/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Enter your username"
                android:inputType="text"
                android:textColor="#FF000000"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="288dp"
        android:layout_height="54dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="469dp"
        android:layout_gravity="top|left"
        android:backgroundTint="#FF4A1515"
        android:text="Login"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp"
        android:fontFamily="@font/roboto_medium" />

    <LinearLayout
        android:id="@+id/container_input_password"
        android:layout_width="298dp"
        android:layout_height="62dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="342dp"
        android:layout_gravity="top|left"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/text_input_password_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Password"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#FF4A1515"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/container_input_password_textfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/image_book_box"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp">

            <EditText
                android:id="@+id/text_input_password_textfield_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:textColor="#FF000000"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/btn_signup"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="533dp"
        android:backgroundTint="#FF4A1515"
        android:fontFamily="@font/roboto_medium"
        android:text="Sign Up"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_please_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginTop="225dp"
        android:layout_gravity="center_horizontal"
        android:gravity="left|top"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:lineHeight="22dp"
        android:text="please Sign in Your Account"
        android:textColor="#FF403535"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/text_books_diary"
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="-27.5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:fontFamily="@font/rochester"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Bookâ€™s Diary "
        android:textColor="#FF865050"
        android:textSize="64dp" />


</FrameLayout>